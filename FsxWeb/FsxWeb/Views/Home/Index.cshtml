<div ng-controller="PlaneController as planeController">
    <ui-gmap-google-map center='planeController.planeData.location' zoom='planeController.map.zoom'>
        <ui-gmap-marker idkey='planeController.marker.id'
                        options='planeController.marker.options'
                        icon='planeController.marker.icon'
                        coords='planeController.planeData.location'>
        </ui-gmap-marker>
    </ui-gmap-google-map>

</div>

@section scripts
{
    @Scripts.Render("~/functionality/home")
}
